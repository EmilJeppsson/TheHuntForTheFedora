  <script>
  var config = {
      type: Phaser.AUTO,
      width: 800,
      height: 600,
      scene: {
          preload: preload,
          create: create,
          update: update
      }
  };

  var game = new Phaser.Game(config);

  function preload(){
    //this.load.setBaseURL('http://labs.phaser.io');
		this.load.image('sky', 'http://labs.phaser.io/src/games/firstgame/assets/sky.png');
  }

  function create(){
    this.add.image(400, 300, 'sky');
  }

  function update(){

  }
  </script>
